{
  "expo": {
    "name": "Zeus",
    "slug": "zeus-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "scheme": "zeus",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#121214"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.zeus.workout",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Requis pour scanner des QR codes.",
        "NSPhotoLibraryUsageDescription": "Requis pour importer des photos de progression.",
        "UIBackgroundModes": []
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#121214"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.zeus.workout",
      "versionCode": 1,
      "permissions": [
        "android.permission.VIBRATE"
      ]
    },
    "plugins": [
      "expo-router",
      "expo-secure-store"
    ],
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": ""
      }
    }
  }
}